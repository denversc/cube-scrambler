{
  "name": "cube-scrambler",
  "version": "0.0.1",
  "engines": {
    "node": ">=22"
  },
  "description": "A JavaScript console and web application for scrambling rubik's cubes ",
  "homepage": "https://github.com/denversc/cube-scrambler",
  "bugs": {
    "url": "https://github.com/denversc/cube-scrambler/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denversc/cube-scrambler.git"
  },
  "license": "Apache-2.0",
  "type": "commonjs",
  "prettier": {
    "arrowParens": "avoid",
    "quoteProps": "preserve",
    "singleQuote": false,
    "trailingComma": "all"
  },
  "mocha": {
    "extension": "ts",
    "require": "test/mocha_ts_node_register.js",
    "spec": "test/**/*.test.ts",
    "timeout": 60000
  },
  "scripts": {
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "mocha": "mocha",
    "mocha:browser:build": "rimraf build/mocha && npm run mocha:browser:prepare && npm run mocha:browser:bundle",
    "mocha:browser:bundle": "esbuild --bundle 'test/**/*.test.ts' --outdir=build/mocha --sourcemap --platform=browser --format=iife --external:mocha",
    "mocha:browser:prepare": "ts-node mocha/prepare.ts",
    "mocha:browser:serve": "static-server build/mocha",
    "mocha:ci": "mocha --exit --check-leaks --fail-zero --forbid-only --forbid-pending",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "tsc": "tsc -b"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/signale": "^1.4.7",
    "chai": "^4.5.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "mocha": "^10.8.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "signale": "^1.4.0",
    "static-server": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
