{
  "name": "cube-scrambler",
  "version": "0.0.1",
  "engines": {
    "node": ">=22"
  },
  "description": "A JavaScript console and web application for scrambling rubik's cubes ",
  "homepage": "https://github.com/denversc/cube-scrambler",
  "bugs": {
    "url": "https://github.com/denversc/cube-scrambler/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denversc/cube-scrambler.git"
  },
  "license": "Apache-2.0",
  "type": "commonjs",
  "prettier": {
    "arrowParens": "avoid",
    "quoteProps": "preserve",
    "singleQuote": false,
    "trailingComma": "all"
  },
  "mocha": {
    "extension": "ts",
    "require": "test/mocha_ts_node_register.js",
    "spec": "test/**/*.test.ts",
    "timeout": 60000
  },
  "scripts": {
    "mocha:ci": "mocha --exit --check-leaks --fail-zero --forbid-only --forbid-pending",
    "mocha": "mocha",
    "prettier:check": "prettier --check .",
    "prettier": "prettier --write .",
    "tsc": "tsc -b"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "chai": "^4.5.0",
    "mocha": "^10.8.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
